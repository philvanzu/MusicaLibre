                                <!-- default style -->
                                <Style Selector="Border[Tag=False]">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                                <!-- selected style -->
                                <Style Selector="Border[Tag=True]">
                                    <Setter Property="Background" Value="#5050FF33" />
                                    <Setter Property="BorderBrush" Value="DodgerBlue"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Border.Styles>
                            <Grid ColumnDefinitions="50, *" VerticalAlignment="Center">
                                <Border BorderBrush="White" BorderThickness="1">
                                    <Image Height="48" Width="48" Source="{Binding Thumbnail}"/>
                                </Border>
                                <Border Grid.Column="1">
                                    <Grid RowDefinitions="0.5*, 0.5*">
                                        <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Title}"
                                                       FontSize="16" FontWeight="Bold" Margin="8 0"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="NoWrap"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Duration}" />
                                        </Grid>
                                        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto">
                                            <TextBlock Text="{Binding PlayStatusString}" 
                                                       IsVisible="{Binding IsPlaying}"
                                                       Margin="8 0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Artists}" 
                                                       Margin="8 0 "
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="NoWrap"/>
                                            <TextBlock Grid.Column="2" Text="{Binding AlbumPosition}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>    
                    </DataTemplate>
                </ctrl:VirtualizedItemsRepeater.ItemTemplate>
            </ctrl:VirtualizedItemsRepeater>
        </ScrollViewer>    
    </Grid>
  </Border>  
</UserControl>
