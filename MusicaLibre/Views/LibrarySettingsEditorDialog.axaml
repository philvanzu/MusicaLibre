<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MusicaLibre.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MusicaLibre.Views.LibrarySettingsEditorDialog"
        Title="LibrarySettingsEditorDialog"
        Width="600" Height="350"
        WindowStartupLocation="CenterOwner"
        x:DataType="viewModels:LibrarySettingsViewModel">
    <Grid RowDefinitions="Auto,32,*, 32, Auto" Margin="16">
        <Grid ColumnDefinitions="*, Auto">
            <TextBox Text="{Binding LibraryRoot}"/>
            <Button Grid.Column="1" Content="Pick Directory" Command="{Binding PickDirectoryCommand}"/>
        </Grid>
        <Grid Grid.Row="2" ColumnDefinitions="Auto, 32, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
            <TextBlock Grid.Column="0" Grid.Row="0">Track Added Date source</TextBlock>
            <ComboBox Grid.Column="2" Grid.Row="0" 
                      ItemsSource="{Binding DateSources}" 
                      SelectedIndex="{Binding LibCreationAddedDateSource, Mode=TwoWay}"/>
            <TextBlock Grid.Column="0" Grid.Row="1">Artists Artwork directory</TextBlock>
            <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding ArtistArtworkPath}"/>
            
            <TextBlock Grid.Column="0" Grid.Row="2">Genres Artwork directory</TextBlock>
            <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding GenreArtworkPath}"/>
            
            <TextBlock Grid.Column="0" Grid.Row="3">Publisher Artwork directory</TextBlock>
            <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding PublisherArtworkPath}"/>
            
            <TextBlock Grid.Column="0" Grid.Row="4">Year Artwork directory</TextBlock>
            <TextBox Grid.Column="2" Grid.Row="4" Text="{Binding YearArtworkPath}"/>
            
        </Grid>
        <Grid Grid.Row="4" Grid.ColumnDefinitions="*, *">
            <Button Content="Create Library" Command="{Binding CreateLibraryCommand}"
                    IsEnabled="{Binding CanCreateLibrary}"
                    HorizontalAlignment="Center"/>
            <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
