<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicaLibre.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MusicaLibre.Views.ProgressView"
             x:DataType="vm:ProgressViewModel">
    
    <Grid ColumnDefinitions="*,250,Auto">
        <TextBlock Grid.Column="0" 
                   Text="{Binding Message}" 
                   FontSize="16"
                   Margin="8,2,8,2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        <ProgressBar Grid.Column="1"
                     Minimum="0" Maximum="1"
                     Value="{Binding ProgressValue}"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Height="24"/>
        <Button Grid.Column="2" Content="X"
                ToolTip.Tip="Cancel Task"
                Command="{Binding CancelPressedCommand}"
                IsVisible="{Binding CanPressCancel}"
                Margin="2"/>
    </Grid>
</UserControl>
